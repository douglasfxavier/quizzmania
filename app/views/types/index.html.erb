<h1>Types</h1>
<p class="text-right"><%= link_to 'New Type', new_type_path %></p>

<table class="table table-borderless">
 <thead>
    <tr>
      <th>Description</th>
      <th>Emoji</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td scope="col"><%= type.description %></td>
        <td scope="col"><%= type.image %></td>
        <td scope="col">
          <%= link_to 'Edit', edit_type_path(type) %> |
          <%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
