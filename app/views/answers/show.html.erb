<div class="container">
	<p id="notice"><%= notice %></p>

	<div class="col-md-12">

		<h1><span class="text-muted">Quizz: </span><%= @quizz.description %></h1>
		
		<br>

		<div class="row">
			<div class="col-md-6">
				<h2>Suas Respostas </h2>

				<br>
				
				<div class="row">
					<% @map = Hash.new %>
					<% @answers.each do |answer| %>
						<% @total = answer.questions.count %>
						<% answer.questions.each do |question| %>
							
							<div class="col-md-12">
								<div class="row">
									<div class="col-md-12">
										<strong><%= question.description %>: </strong>
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<% @choice = question.answers[0].choice %>
										<%= @choice.description %>
									</div>
								</div>
							</div>
						<% end %>
					<% end %>
				</div>
			</div>

			<div class="col-md-6">
				<div class="row">
					<div class="col-md-12">
						<h2>Resultado</h2>
						<%= @tagresult.description %>
					</div>
				</div>
			</div>			
			
			<p class="col-md-12 text-right">
				<%= link_to 'Voltar', new_answer_path({:quizz_id => @quizz.id}) %>
			</p>
		</div>
	</div>
