      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :type_id %>
     <%= collection_select(:quizz,:type_id, @types, :id, :description) %>
